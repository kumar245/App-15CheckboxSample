<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.kumar.user.app_15checkboxsample.MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="47dp"
        android:text="@string/do_you_have_these_pets"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:id="@+id/dogCheckBox"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:checked="false"
        android:duplicateParentState="false"
        android:text="@string/dog"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:id="@+id/catCheckBox"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/cat"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_below="@+id/dogCheckBox"
        android:layout_alignLeft="@+id/dogCheckBox"
        android:layout_alignStart="@+id/dogCheckBox"
        android:layout_marginTop="11dp" />

    <CheckBox
        android:id="@+id/dragonCheckBox"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/dragon"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/catCheckBox"
        android:layout_alignLeft="@+id/catCheckBox"
        android:layout_alignStart="@+id/catCheckBox" />

    <Button
        android:id="@+id/button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/show"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp"
        android:layout_below="@+id/dragonCheckBox"
        android:layout_alignRight="@+id/dragonCheckBox"
        android:layout_alignEnd="@+id/dragonCheckBox"
        android:layout_marginTop="48dp" />

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sho"
        android:textSize="25dp"
        android:layout_marginTop="52dp"
        android:layout_below="@+id/button"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp" />

</RelativeLayout>
